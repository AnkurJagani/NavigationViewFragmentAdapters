<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patloew.navigationviewfragmentadaptersample">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:label="@string/adapter_label"
            android:taskAffinity="com.patloew.navigationviewfragmentadaptersample.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainBottomNavigationActivity"
            android:label="@string/adapter_label_bottomnavigation"
            android:taskAffinity="com.patloew.navigationviewfragmentadaptersample.MainBottomNavigationActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StateMainActivity"
            android:label="@string/stateadapter_label"
            android:taskAffinity="com.patloew.navigationviewfragmentadaptersample.StateMainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StateMainBottomNavigationActivity"
            android:label="@string/stateadapter_label_bottomnavigation"
            android:taskAffinity="com.patloew.navigationviewfragmentadaptersample.StateMainBottomNavigationActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SampleActivity" />

    </application>

</manifest>